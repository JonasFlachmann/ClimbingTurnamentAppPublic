{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true,   // ✅ true = Deployments auf main aktivieren | false = deaktivieren
      "preview": false // ✅ true = Preview-Deployments für Branches aktivieren | false = deaktivieren
    }
  },
  "ignoreCommand": "git log -1 --pretty=%B | grep skip-deploy" 
  // ✅ Wenn die Commit-Message 'skip-deploy' enthält, wird KEIN Deployment ausgeführt
}
